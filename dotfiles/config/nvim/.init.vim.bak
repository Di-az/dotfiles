"Soft tabbing with 4 spaces"
set tabstop=4 softtabstop=4
set shiftwidth=4
set expandtab
set smartindent

"Background file thing"
set exrc

"Side bar numbers, scrolling and display"
set relativenumber
set nu
set nohlsearch
set hidden
set noerrorbells
set nowrap
set incsearch
set termguicolors
set scrolloff=8


"No swap files"
set noswapfile
set nobackup
set undodir=~/.vim/undodir
set undofile

"idk"
set noshowmode

"Column on the right to avoid bad code"
set colorcolumn=80
set signcolumn=yes

" Give more space for displaying messages "
set cmdheight=2

call plug#begin('~/.vim/plugged')
Plug 'nvim-lua/plenary.nvim'
Plug 'gruvbox-community/gruvbox'

call plug#end()


"Theme & Color & Scheme"
colorscheme gruvbox

"No background FIX"
"highlight Normal guibg=none

let mapleader = " "


